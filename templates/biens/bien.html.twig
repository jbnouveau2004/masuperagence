{% extends 'base.html.twig' %}

{% block title bien.title %}

{% block body %}

<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
            </div>
            <div class="col-md-4">
                <h1>{{bien.title}}</h1>
                <h2>{{bien.rooms}} pièces - {{bien.surface}} m²</h2>
                <div class="text-primary" style="font-size: 4rem;font-weight:bold;">{{bien.prix | number_format(0, '', ' ')}} €</div>
                <a href="#" class="btn btn-primary">Contacter l'agence</a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">

    <p>
        {{bien.description | nl2br}}
    </p>
    <div class="row">
        <div class="col-md-8">
            <h2>Caractéristiques</h2>
            <table class="table table-striped">
                <tr>
                <td>Surface habitable</td>
                <td>{{bien.surface}} m²</td>
                </tr>
                <tr>
                <td>Pièces</td>
                <td>{{bien.rooms}}</td>
                </tr>
                <tr>
                <td>Chambres</td>
                <td>{{bien.bedrooms}}</td>
                </tr>
                <tr>
                <td>Etage</td>
                <td>{{bien.floor}}</td>
                </tr>
                <tr>
                <td>Chauffage</td>
                <td>{{bien.heatType}}</td>
                </tr>
            </table>
        </div>
        <div class="col-md-4">
            <h2>Spécificités</h2>
        </div>
    </div>
    <div class="row">
    {% for picture in bien.pictures %}
        <div class="col" style="width: 100px; flex: none; margin: 5px;">
            <img src="..{{ vich_uploader_asset(picture, 'imageFile') }}" width="100" alt="">
        </div>
    {% endfor %} 
                {% if bien.picture %}
                {% else %}
                    <img src="..{{ '/media/properties/empty.png' }}" width="100" alt="">
                {% endif %}
    </div>

</div>

{% endblock %}