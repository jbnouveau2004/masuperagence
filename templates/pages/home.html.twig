    <div class="row flex">
        {% for bien in biens %}
        <div class="col-3">
            <div class="card">
                {% if bien.picture %}
                    <img src="{{ vich_uploader_asset(bien.picture, 'imageFile')  | imagine_filter('thumbname') }}" alt="card-img-top">
                {% else %}
                    <img src="{{ '/media/properties/empty.png' | imagine_filter('thumbname') }}" alt="card-img-top">
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">
                    <a href="{{path('nom_de_route2', {id: bien.id})}}">{{bien.title}}</a>
                    </h5>
                    <p class="card-text">{{bien.city}} ({{bien.postalCode}})</p>
                    <div class="text-primary" style="font-weight: bold;font-size:2rem;">{{bien.prix | number_format(0, '', ' ')}} â‚¬</div>
