{% extends 'base.html.twig' %}

{% block title 'Editer le bien' %}

{% block body %}

<div class="container mt-4">
    <h1>Editer le bien</h1>
{{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">{{form_row(form.title)}}</div>
        <div class="col-md-4">{{form_row(form.surface)}}</div>
        <div class="col-md-4">{{form_row(form.prix)}}</div>
    </div>
    <div class="row">
        <div class="col-md-2">{{form_row(form.rooms)}}</div>
        <div class="col-md-2">{{form_row(form.bedrooms)}}</div>
        <div class="col-md-2">{{form_row(form.heat)}}</div>
        <div class="col-md-2">{{form_row(form.floor)}}</div>
    </div>
    <div class="row">
        <div class="col-md-2">{{form_row(form.pictureFiles)}}</div>
        <div class="col-md-5">{{form_row(form.address)}}</div>
        <div class="col-md-2">{{form_row(form.city)}}</div>
        <div class="col-md-2">{{form_row(form.postal_code)}}</div>
        <div class="col-md-1">{{form_row(form.sold)}}</div>
    </div>
    {{ form_widget(form) }}
    <button class="btn btn-primary">Modifier</button>
{{ form_end(form) }}
    <div class="row">
    {% for picture in bien.pictures %}
        <div class="col" style="width: 100px; flex: none; margin: 5px;">
            <img src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('thumbname') }}" width="100" alt="">
              
            <a href="{{ path('admin_picture_delete', {id: picture.id})}}" class="btn btn-danger" data-delete data-token="{{ csrf_token('delete' ~ picture.id)}}">Supprimer</a>

        </div>
    {% endfor %}
    </div>
</div>

{% endblock %}